{
  "name": "artist-portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "deploy:preview": "wrangler pages deploy out --project-name=artist-portfolio-website",
    "deploy:production": "wrangler pages deploy out --project-name=artist-portfolio-website --env=production",
    "postbuild": "npm run lighthouse:ci"
  },
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "critters": "^0.0.23",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@next/bundle-analyzer": "^14.0.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "serve": "^14.2.5",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "web-vitals": "^3.5.2",
    "wrangler": "^3.0.0"
  }
}
